# Build stage
FROM node:18-alpine AS builder

WORKDIR /app
COPY frontend/package*.json ./
RUN npm ci

COPY frontend/ .
RUN npm run build

# Runtime stage
FROM node:18-alpine

WORKDIR /app
COPY --from=builder /app/build ./
COPY --from=builder /app/node_modules node_modules/
COPY frontend/package.json .

EXPOSE 5173

ENV PORT=5173
ENV HOST=0.0.0.0

CMD ["node", "index.js"]